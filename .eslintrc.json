{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "NodeJS": "readonly"
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-console": "off",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  },
  "overrides": [
    {
      "files": ["web/src/**/*.{ts,tsx}"],
      "env": {
        "browser": true
      },
      "globals": {
        "RequestInit": "readonly",
        "Response": "readonly",
        "fetch": "readonly"
      },
      "extends": [
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
      ],
      "plugins": ["react", "react-hooks"],
      "settings": {
        "react": {
          "version": "detect"
        }
      },
      "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off"
      }
    }
  ],
  "ignorePatterns": [
    "dist/",
    "build/",
    "node_modules/",
    "web/dist/",
    "*.js"
  ]
} 