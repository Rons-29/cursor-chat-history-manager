{
  "ports": {
    "api": 3001,
    "web": 5173,
    "backup": {
      "api": 3002,
      "web": 5174
    }
  },
  "servers": {
    "api": {
      "name": "Real API Server",
      "port": 3001,
      "path": "dist/server/real-api-server.js",
      "healthEndpoint": "/api/health",
      "pidFile": "data/.server.pid"
    },
    "web": {
      "name": "Web UI Server", 
      "port": 5173,
      "path": "web",
      "command": "npm run dev",
      "healthEndpoint": "/",
      "pidFile": "data/.web.pid"
    }
  },
  "development": {
    "autoRestart": true,
    "singleInstance": true,
    "healthCheckInterval": 5000,
    "maxStartupTime": 30000,
    "gracefulShutdownTime": 5000
  }
} 