{
  "name": "chatflow",
  "version": "1.0.0",
  "description": "AI開発者のための次世代チャット履歴管理・分析プラットフォーム - Cursor、Claude Dev、その他AIツールとの会話を統合管理",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run server\" \"npm run web\"",
    "dev:full": "concurrently \"npm run server\" \"npm run web\"",
    "start:all": "concurrently \"npm run server:prod\" \"npm run web:preview\"",
    "dev:quick": "concurrently \"npm run simple-server\" \"npm run web:dev\"",
    "server": "npm run build && node dist/server/real-api-server.js",
    "server:dev": "tsc --incremental && node dist/server/real-api-server.js",
    "server:prod": "tsc && node dist/server/real-api-server.js",
    "cli": "ts-node src/cli.ts",
    "build": "tsc",
    "web": "cd web && npm run dev",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "web:preview": "cd web && npm run preview",
    "quality": "npm run lint && npm run format && npm run build",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "claude-dev:integrate": "ts-node --esm scripts/claude-dev-integration.ts",
    "claude-dev:analyze": "echo '📊 Claude Dev拡張機能の分析レポートを表示します' && cat docs/CLAUDE_DEV_ANALYSIS.md",
    "integration": "tsc && node dist/cli-integration.js",
    "integration:scan": "npm run integration scan",
    "integration:watch": "npm run integration watch",
    "integration:status": "npm run check:integration && echo '📊 統合健全性スコア確認完了'",
    "integration:config": "npm run integration config",
    "simple-server": "node simple-api-server.cjs",
    "test:real-integration": "tsc && node dist/scripts/test-real-integration.js",
    "check:integration": "./scripts/integration-guard.sh",
    "precommit": "./scripts/security-check.sh && npm run check:integration && npm run quality",
    "monthly:review": "./scripts/monthly-integration-review.sh",
    "integration:monitor": "watch -n 60 'npm run check:integration'",
    "stats": "npm run check:integration && echo '📈 統計情報更新完了'",
    "docs:check": "./scripts/docs-quality-check.sh",
    "docs:quality": "npm run docs:check && echo '📚 ドキュメント品質チェック完了'"
  },
  "keywords": [
    "chatflow",
    "ai",
    "chat",
    "history",
    "cursor",
    "claude-dev",
    "conversation",
    "analytics",
    "development",
    "productivity",
    "assistant",
    "search",
    "management",
    "tools"
  ],
  "author": "Rons-29",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rons-29/chatflow.git"
  },
  "bugs": {
    "url": "https://github.com/Rons-29/chatflow/issues"
  },
  "homepage": "https://github.com/Rons-29/chatflow#readme",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@tanstack/react-query": "^5.79.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/morgan": "^1.9.9",
    "@types/recharts": "^1.8.29",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^11.10.0",
    "chokidar": "^3.5.3",
    "commander": "^14.0.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "events": "^3.3.0",
    "express": "^5.1.0",
    "fs-extra": "^11.2.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "postcss": "^8.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.1",
    "recharts": "^2.15.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "vite": "^6.3.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/chokidar": "^2.1.5",
    "@types/commander": "^2.12.0",
    "@types/express": "^5.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/lru-cache": "^7.10.9",
    "@types/node": "^20.17.57",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^19.1.5",
    "@types/supertest": "^6.0.3",
    "@types/testing-library__react": "^10.0.1",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "concurrently": "^9.1.2",
    "date-fns": "^4.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
